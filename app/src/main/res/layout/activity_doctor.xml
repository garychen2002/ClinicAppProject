<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorActivity">

    <TextView
        android:id="@+id/Name"
        android:layout_width="210dp"
        android:layout_height="64dp"
        android:layout_marginTop="140dp"
        android:background="#DCE5EDEC"
        android:gravity="center"
        android:text="@string/d_name"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Upcoming_Appointment"
        android:layout_width="205dp"
        android:layout_height="63dp"
        android:layout_marginBottom="276dp"
        android:onClick="openUpcomingAppointment"
        android:text="@string/d_appointment"
        app:backgroundTint="#9EC3B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/d_info"
        android:layout_width="178dp"
        android:layout_height="61dp"
        android:fontFamily="sans-serif"
        android:text="@string/d_info"
        app:layout_constraintBottom_toTopOf="@+id/Upcoming_Appointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name"
        app:layout_constraintVertical_bias="0.267" />
</androidx.constraintlayout.widget.ConstraintLayout>