<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:background="@null"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:background="@null"
                android:text="Time: "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/booking_time"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:background="@null"
                android:text="@string/booking_time"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:background="@null"
                android:text="Booking Status: "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/booking_status"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:background="@null"
                android:text="@string/booking_status"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="190dp"
                android:layout_height="60dp"
                android:background="@null"
                android:text="Patient's Info:  "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/p_info"
                android:layout_width="210dp"
                android:layout_height="60dp"
                android:background="@null"
                android:text="@string/p_info" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:orientation="horizontal">

            <TextView
                android:layout_width="190dp"
                android:layout_height="60dp"
                android:background="#00FFFFFF"
                android:text="Previous Doctor: "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/previous_doctor"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="@string/previous_d" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>